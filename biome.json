{
    "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "files": {
        "include": ["src/**/*.js", "src/**/*.ts"]
    },
    "formatter": {
        "indentWidth": 4,
        "indentStyle": "space"
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "complexity": {
                "noForEach": "off"
            },
            "suspicious": {
                "noPrototypeBuiltins": "off"
            },
            "correctness": {
                "useExhaustiveDependencies": "off"
            }
        }
    }
}
